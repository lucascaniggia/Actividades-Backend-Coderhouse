<form action="/api/products/save" method="POST">
    <h1>Enter Product</h1>
    <div class="mb-3">
        <label for="title" class="form-label">Product Name</label>
        <input type="text" id="text" name="title"></input>
    </div>
    <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="text" id="price" name="price"></input>
    </div>
    <div class="mb-3">
        <label for="thumbnail" class="form-label">Image/Thumbnail</label>
        <input type="text" id="thumbnail" name="thumbnail"></input>
    </div>
    <button type="submit" class="btn btn-primary" href="/api/products/save">Save Product</button>
</form>